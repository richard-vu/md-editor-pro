{
  "name": "md-editor-pro",
  "displayName": "MD Editor Pro",
  "description": "A powerful Markdown editor with PDF/HTML export, multi-language translation (Vietnamese, English, Japanese), and Mermaid diagram support",
  "publisher": "luong-vu",
  "version": "0.0.5",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/richard-vu/md-editor-pro"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "ignoredBuiltDependencies": [
      "@vscode/vsce-sign",
      "keytar"
    ]
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "mdEditorPro.wysiwyg",
        "displayName": "MD Editor Pro (WYSIWYG)",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      },
      {
        "viewType": "mdEditorPro.fullscreen",
        "displayName": "MD Editor Pro (Fullscreen)",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "md-editor-pro.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "md-editor-pro.translate",
        "title": "MD Editor Pro: Translate (Select Language)"
      },
      {
        "command": "md-editor-pro.translateToEn",
        "title": "MD Editor Pro: Translate to English"
      },
      {
        "command": "md-editor-pro.translateToVi",
        "title": "MD Editor Pro: Translate to Vietnamese"
      },
      {
        "command": "md-editor-pro.translateToJa",
        "title": "MD Editor Pro: Translate to Japanese"
      },
      {
        "command": "md-editor-pro.exportPdfFile",
        "title": "MD Editor Pro: Export PDF (Current File)"
      },
      {
        "command": "md-editor-pro.exportPdfFolder",
        "title": "MD Editor Pro: Export PDF (Folder)"
      },
      {
        "command": "md-editor-pro.exportHtmlFile",
        "title": "MD Editor Pro: Export HTML (Current File)"
      },
      {
        "command": "md-editor-pro.exportHtmlFolder",
        "title": "MD Editor Pro: Export HTML (Folder)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && pnpm run build:css && tsx esbuild.ts",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "tsx esbuild.ts --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch:css": "postcss ./media/editor/styles.input.css -o ./media/editor/styles.css --watch",
    "build:css": "postcss ./media/editor/styles.input.css -o ./media/editor/styles.css",
    "package": "pnpm run check-types && pnpm run lint && pnpm run build:css && tsx esbuild.ts --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "1.95.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "autoprefixer": "^10.4.23",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "markdown-it": "^14.1.0",
    "puppeteer-core": "^24.34.0"
  }
}